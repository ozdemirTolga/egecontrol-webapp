<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel - Ege Control</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* Prevent sidebar nav text from wrapping and keep tidy spacing */
        .sidebar-nav .nav-link {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: block;
        }
        .sidebar-nav hr { margin: .75rem 0; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-cogs"></i> Ege Control - Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Index">
                                <i class="fas fa-dashboard"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Customers/Index">
                                <i class="fas fa-users"></i> Müşteriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Quotes/Index">
                                <i class="fas fa-file-invoice"></i> Teklifler
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-plus"></i> Yeni
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-page="/Customers/Create">
                                    <i class="fas fa-user-plus"></i> Müşteri
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-page="/Quotes/Create">
                                    <i class="fas fa-file-plus"></i> Teklif
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 bg-light">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column sidebar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" asp-page="/Index">
                                <i class="fas fa-dashboard"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Customers/Index">
                                <i class="fas fa-users"></i> Müşteriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Quotes/Index">
                                <i class="fas fa-file-invoice"></i> Teklifler
                            </a>
                        </li>
                        <hr>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/Customers/Create">
                                    <i class="fas fa-user-plus"></i> Yeni Müşteri
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("QuoteCreator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/Quotes/Create">
                                    <i class="fas fa-file-plus"></i> Yeni Teklif
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <hr>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/Users/Index">
                                    <i class="fas fa-users-cog"></i> Kullanıcı Yönetimi
                                </a>
                            </li>
                        }
                        <hr>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <main role="main" class="col-lg-10 col-md-10 ml-sm-auto px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        (function ($) {
            if (!$ || !$.validator || !$.validator.methods) return;
            var originalRange = $.validator.methods.range;
            // Accept both comma and dot as decimal separators and ignore thousand separators
            $.validator.methods.number = function (value, element) {
                if (this.optional(element)) return true;
                if (typeof value === 'string') {
                    var normalized = value.trim()
                        .replace(/\s/g, '')      // spaces
                        .replace(/\./g, '')      // remove thousand dots
                        .replace(/,/g, '.');      // comma -> dot
                    return !isNaN(normalized) && /^-?\d*(?:\.\d+)?$/.test(normalized);
                }
                return true;
            };
            $.validator.methods.range = function (value, element, param) {
                if (typeof value === 'string') {
                    value = value.trim().replace(/\s/g, '').replace(/\./g, '').replace(/,/g, '.');
                }
                return originalRange.call(this, value, element, param);
            };
        })(window.jQuery);
    </script>
</body>
</html>
