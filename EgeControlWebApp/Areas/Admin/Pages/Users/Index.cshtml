@page
@model EgeControlWebApp.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Kullanıcı Yönetimi</h3>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Yeni Kullanıcı
                    </a>
                </div>

                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @Model.StatusMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>E-posta</th>
                                    <th>Departman</th>
                                    <th>Pozisyon</th>
                                    <th>Roller</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr class="@(!user.IsActive ? "table-secondary" : "")">
                                        <td>
                                            <strong>@user.FullName</strong>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>@user.Department</td>
                                        <td>@user.Position</td>
                                        <td>
                                            @if (Model.UserRoles.ContainsKey(user.Id) && Model.UserRoles[user.Id].Any())
                                            {
                                                @foreach (var role in Model.UserRoles[user.Id])
                                                {
                                                    <span class="badge bg-info me-1">@role</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Rol Atanmamış</span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-page="Roles" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info" title="Roller">
                                                    <i class="fas fa-user-tag"></i>
                                                </a>
                                                @if (user.IsActive)
                                                {
                                                    @if (!Model.UserRoles.ContainsKey(user.Id) || !Model.UserRoles[user.Id].Contains("Admin"))
                                                    {
                                                        <form method="post" asp-page-handler="Deactivate" style="display: inline;">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                    onclick="return confirm('Bu kullanıcıyı deaktive etmek istediğinizden emin misiniz?')" 
                                                                    title="Deaktive Et">
                                                                <i class="fas fa-user-slash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                else
                                                {
                                                    <form method="post" asp-page-handler="Activate" style="display: inline;">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Aktifleştir">
                                                            <i class="fas fa-user-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Users.Any())
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">Henüz kayıtlı kullanıcı bulunmamaktadır.</p>
                            <a asp-page="Create" class="btn btn-primary">İlk Kullanıcıyı Oluşturun</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
