@page
@using EgeControlWebApp.Models
@model EgeControlWebApp.Areas.Admin.Pages.Quotes.EditModel
@{
    ViewData["Title"] = "Teklif Düzenle";
    ViewData["ActivePage"] = "Quotes";
}

<style>
    /* Quote items hizalama düzeltmeleri */
    .quote-item .row {
        align-items: center;
        min-height: 0;
    }
    
    .quote-item .form-group,
    .quote-item .mb-3 {
        margin-bottom: 0 !important;
    }
    
    /* Tüm form kontrollerini aynı yükseklikte yap */
    .quote-item .form-control {
        height: 38px;
        font-size: 0.875rem;
        text-align: center; /* tüm kutularda metni ortala */
    }
    
    .quote-item .form-label {
        font-size: 0.875rem;
        margin-bottom: 4px;
        font-weight: 500;
    }
    
    /* Miktar ve İndirim alanları için özel stil */
    .quote-item .quantity-input {
        text-align: center;
        max-width: 80px;
        min-width: 80px;
    }
    
    .quote-item .discount-input {
        text-align: center;
        max-width: 80px;
    }
    
    /* İndirim alanında spinner butonları GÖRÜNSÜN: gizlemeyi kaldırdık */
    
    /* Miktar alanları için stepper butonlarını GÖSTER */
    .quote-item .quantity-input::-webkit-outer-spin-button,
    .quote-item .quantity-input::-webkit-inner-spin-button {
        -webkit-appearance: auto !important;
        display: block !important;
    }
    
    /* HERHANGI BİR + - BUTONUNU GİZLE - SADECE İNDİRİM İÇİN */
    .quote-item .discount-stepper-btn {
        display: none !important;
        visibility: hidden !important;
    }
    
    /* Diğer butonlar */
    .quote-item .btn-danger {
        height: 38px;
        margin-top: 0;
    }
    
    /* Stepper butonları tamamen gizle - eğer varsa */
    .quote-item .stepper-btn,
    .quote-item button[onclick*="adjust"],
    .quote-item .btn[onclick*="adjustQuantity"],
    .quote-item .btn[onclick*="adjustDiscount"],
    .quote-item .input-group-text,
    .quote-item .input-group-prepend,
    .quote-item .input-group-append {
        display: none !important;
        visibility: hidden !important;
    }
    
    /* Input group'ları da gizle - sadece input'u göster */
    .quote-item .stepper-group,
    .quote-item .input-group {
        display: block !important;
    }
    
    /* Input group içindeki input'ları düzelt */
    .quote-item .input-group .form-control {
        border-radius: 0.375rem !important;
    }

    /* Match Create page: fixed widths for price and total */
    .quote-item .price-input {
        max-width: 120px;
        min-width: 120px;
        margin: 0 auto;
    }
    .quote-item .total-display {
        max-width: 150px;
        min-width: 150px;
        margin: 0 auto;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Teklif Düzenle
                </h2>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Geri
                </a>
            </div>

            <form method="post" id="editQuoteForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Quote.Id" />
                <input type="hidden" asp-for="Quote.QuoteNumber" />
                <input type="hidden" asp-for="Quote.CreatedAt" />

                <div class="row">
                    <div class="col-12 col-lg-10">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Teklif Bilgileri</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Quote.Title" class="form-label">Başlık</label>
                                            <input asp-for="Quote.Title" class="form-control" />
                                            <span asp-validation-for="Quote.Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Quote.CustomerId" class="form-label">Müşteri</label>
                                            <select asp-for="Quote.CustomerId" asp-items="Model.CustomerOptions" class="form-select">
                                                <option value="">Müşteri Seçin</option>
                                            </select>
                                            <span asp-validation-for="Quote.CustomerId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Quote.ValidUntil" class="form-label">Geçerlilik Tarihi</label>
                                            <input asp-for="Quote.ValidUntil" type="date" class="form-control" />
                                            <span asp-validation-for="Quote.ValidUntil" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label asp-for="Quote.VatRate" class="form-label">KDV Oranı (%)</label>
                                            <input asp-for="Quote.VatRate" type="number" step="0.01" class="form-control" />
                                            <span asp-validation-for="Quote.VatRate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label asp-for="Quote.Currency" class="form-label">Para Birimi</label>
                                            <select asp-for="Quote.Currency" class="form-select" id="currencySelect">
                                                @{
                                                    var currencyOptions = EgeControlWebApp.Models.CurrencyHelper.GetCurrencyOptions();
                                                }
                                                @foreach (var option in currencyOptions)
                                                {
                                                    <option value="@option.Key">@option.Value</option>
                                                }
                                            </select>
                                            <span asp-validation-for="Quote.Currency" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label asp-for="Quote.Status" class="form-label">Durum</label>
                                            <select asp-for="Quote.Status" class="form-select">
                                                <option value="0">Taslak</option>
                                                <option value="1">Gönderildi</option>
                                                <option value="2">Kabul Edildi</option>
                                                <option value="3">Reddedildi</option>
                                            </select>
                                            <span asp-validation-for="Quote.Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Quote.Notes" class="form-label">Notlar</label>
                                    <textarea asp-for="Quote.Notes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Quote.Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Quote Items -->
                        <div class="card mt-4">
                            <div class="card-header d-flex justify-content-between align-items-center sticky-top bg-white" style="top: 0; z-index: 10;">
                                <h5 class="mb-0">Teklif Kalemleri</h5>
                                <button type="button" class="btn btn-primary btn-sm" onclick="addQuoteItem()">
                                    <i class="fas fa-plus me-1"></i> Kalem Ekle
                                </button>
                            </div>
                            <div class="card-body">
                                <div id="quoteItems">
                                    @for (int i = 0; i < Model.Quote.QuoteItemsList.Count; i++)
                                    {
                                        <div class="quote-item border rounded py-1 px-2 mb-2">
                                            <input type="hidden" asp-for="Quote.QuoteItemsList[i].Id" />
                                            <input type="hidden" asp-for="Quote.QuoteItemsList[i].QuoteId" />
                                            <div class="row g-2 text-muted small mb-0 px-2 text-center">
                                                <div class="col-md-2">Ürün/Hizmet</div>
                                                <div class="col-md-2">Açıklama</div>
                                                <div class="col-md-1">Miktar</div>
                                                <div class="col-md-1">Birim</div>
                                                <div class="col-md-2">Birim Fiyat</div>
                                                <div class="col-md-1">İndirim (%)</div>
                                                <div class="col-md-2">Toplam</div>
                                                <div class="col-md-1 text-center">Sil</div>
                                            </div>
                                            <div class="row g-2 align-items-center px-2">
                                                <div class="col-md-2">
                                                    <input asp-for="Quote.QuoteItemsList[i].ItemName" class="form-control text-center" placeholder="Ürün/Hizmet" />
                                                    <span asp-validation-for="Quote.QuoteItemsList[i].ItemName" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-2">
                                                    <input asp-for="Quote.QuoteItemsList[i].Description" class="form-control text-center" placeholder="Açıklama" />
                                                    <span asp-validation-for="Quote.QuoteItemsList[i].Description" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-1">
                                                    <input asp-for="Quote.QuoteItemsList[i].Quantity" type="text" class="form-control quantity-input text-center" placeholder="Miktar" />
                                                </div>
                                                <div class="col-md-1">
                                                    <input asp-for="Quote.QuoteItemsList[i].Unit" class="form-control text-center" placeholder="Birim" />
                                                </div>
                                                <div class="col-md-2">
                                                    <input asp-for="Quote.QuoteItemsList[i].UnitPrice" type="text" class="form-control price-input text-center" placeholder="Birim Fiyat" />
                                                </div>
                                                <div class="col-md-1">
                                                    <input asp-for="Quote.QuoteItemsList[i].DiscountPercentage" type="text" class="form-control discount-input text-center" placeholder="İndirim %" />
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="text" class="form-control total-display text-center" readonly placeholder="Toplam" />
                                                </div>
                                                <div class="col-md-1 d-grid">
                                                    <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeQuoteItem(this)" title="Kalemi Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Totals -->
                                <div class="row mt-4">
                                    <div class="col-md-8"></div>
                                    <div class="col-md-4">
                                        <table class="table table-sm">
                                            <tr>
                                                <td><strong>Ara Toplam:</strong></td>
                                                <td class="text-end" id="subTotal">₺0,00</td>
                                            </tr>
                                            <tr>
                                                <td><strong>KDV:</strong></td>
                                                <td class="text-end" id="vatAmount">₺0,00</td>
                                            </tr>
                                            <tr class="table-primary">
                                                <td><strong>GENEL TOPLAM:</strong></td>
                                                <td class="text-end" id="totalAmount">₺0,00</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-2">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">İşlemler</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-1"></i> Kaydet
                                    </button>
                                    <a asp-page="./Details" asp-route-id="@Model.Quote.Id" class="btn btn-info">
                                        <i class="fas fa-eye me-1"></i> Görüntüle
                                    </a>
                                    <a asp-page="./Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> İptal
                                    </a>
                                </div>
                            </div>
                        </div>

                        @if (Model.Quote.Customer != null)
                        {
                            <div class="card mt-3">
                                <div class="card-header">
                                    <h6 class="mb-0">Müşteri Bilgileri</h6>
                                </div>
                                <div class="card-body">
                                    <h6 class="text-primary">@Model.Quote.Customer.CompanyName</h6>
                                    <p class="mb-1 small">@Model.Quote.Customer.ContactPerson</p>
                                    <p class="mb-1 small">@Model.Quote.Customer.Email</p>
                                    <p class="mb-0 small">@Model.Quote.Customer.Phone</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    // Use the correct list for initial count (model binding uses Quote.QuoteItemsList)
    let itemIndex = @Model.Quote.QuoteItemsList.Count;

    // Global formatting helpers (match Create)
    if (typeof window.formatNumberValue !== 'function') {
        window.formatNumberValue = function(el) {
            if (el && el.value !== undefined && el.value !== null && el.value !== '' && !isNaN(el.value)) {
                const num = parseFloat(el.value);
                if (el.classList.contains('price-input')) {
                    el.value = num.toFixed(2);
                } else if (el.classList.contains('quantity-input')) {
                    el.value = num.toFixed(1);
                } else if (el.classList.contains('discount-input')) {
                    el.value = num.toFixed(1);
                }
            }
        };
    }
    if (typeof window.addNumberFormatting !== 'function') {
        window.addNumberFormatting = function(input) {
            const formatValue = function() { window.formatNumberValue(this); };
            // Only format on blur for smoother typing
            input.addEventListener('blur', formatValue);
        };
    }

    // Normalize numeric inputs (commas/dots) before submit so the first save passes
    function normalizeNumericInputsForSubmit(root) {
        const inputs = (root || document).querySelectorAll('.quantity-input, .price-input, .discount-input');
        inputs.forEach(inp => {
            if (!inp || typeof inp.value !== 'string') return;
            let v = inp.value.trim();
            if (!v) return;
            v = v.replace(/\s/g, '');
            if (v.includes('.') && v.includes(',')) {
                v = v.replace(/\./g, '').replace(/,/g, '.');
            } else if (v.includes(',')) {
                v = v.replace(/,/g, '.');
            } else {
                const lastDot = v.lastIndexOf('.');
                if (lastDot > -1) {
                    const frac = v.slice(lastDot + 1);
                    if (frac.length > 2) v = v.replace(/\./g, '');
                }
            }
            inp.value = v;
        });
    }

        function addQuoteItem() {
            const container = document.getElementById('quoteItems');
            const newItem = document.createElement('div');
            newItem.className = 'quote-item border rounded py-1 px-2 mb-2';
            newItem.innerHTML = `
                <input type="hidden" name="Quote.QuoteItemsList[${itemIndex}].Id" value="0" />
                <input type="hidden" name="Quote.QuoteItemsList[${itemIndex}].QuoteId" value="@Model.Quote.Id" />
                <div class="row g-2 text-muted small mb-0 px-2 text-center">
                    <div class="col-md-2">Ürün/Hizmet</div>
                    <div class="col-md-2">Açıklama</div>
                    <div class="col-md-1">Miktar</div>
                    <div class="col-md-1">Birim</div>
                    <div class="col-md-2">Birim Fiyat</div>
                    <div class="col-md-1">İndirim (%)</div>
                    <div class="col-md-2">Toplam</div>
                    <div class="col-md-1 text-center">Sil</div>
                </div>
                <div class="row g-2 align-items-center px-2">
                    <div class="col-md-2">
                        <div class="mb-3">
                            <input name="Quote.QuoteItemsList[${itemIndex}].ItemName" class="form-control text-center" placeholder="Ürün/Hizmet" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <input name="Quote.QuoteItemsList[${itemIndex}].Description" class="form-control text-center" placeholder="Açıklama" />
                        </div>
                    </div>
                        <div class="col-md-1">
                            <input name="Quote.QuoteItemsList[${itemIndex}].Quantity" type="text" class="form-control quantity-input text-center" placeholder="Miktar" value="1,0" />
                    </div>
                    <div class="col-md-1">
                        <input name="Quote.QuoteItemsList[${itemIndex}].Unit" class="form-control text-center" value="Adet" placeholder="Birim" />
                    </div>
                        <div class="col-md-2">
                            <input name="Quote.QuoteItemsList[${itemIndex}].UnitPrice" type="text" class="form-control price-input text-center" placeholder="Birim Fiyat" value="0,00" />
                    </div>
                        <div class="col-md-1">
                            <input name="Quote.QuoteItemsList[${itemIndex}].DiscountPercentage" type="text" class="form-control discount-input text-center" placeholder="İndirim %" value="0,0" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control total-display text-center" readonly value="₺0,00" placeholder="Toplam" />
                    </div>
                    <div class="col-md-1 d-grid">
                        <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeQuoteItem(this)" title="Kalemi Sil">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            container.appendChild(newItem);
            itemIndex++;
            attachCalculationEvents(newItem);
            
            // Yeni eklenen input'lara format koruması ekle (sadece ilgili sınıflar)
            newItem.querySelectorAll('.quantity-input, .price-input, .discount-input').forEach(input => {
                if (window.addNumberFormatting) { window.addNumberFormatting(input); }
                if (window.formatNumberValue) { window.formatNumberValue(input); }
            });
            
            calculateTotals();
        }

        function removeQuoteItem(button) {
            button.closest('.quote-item').remove();
            reindexItems();
            calculateTotals();
        }

        function reindexItems() {
            const items = document.querySelectorAll('.quote-item');
            items.forEach((item, index) => {
                const inputs = item.querySelectorAll('input');
                inputs.forEach(input => {
                    const name = input.getAttribute('name');
                    // Reindex fields bound to Quote.QuoteItemsList[<index>].Property
                    if (name && name.includes('Quote.QuoteItemsList[')) {
                        const newName = name.replace(/Quote\.QuoteItemsList\[\d+\]/, `Quote.QuoteItemsList[${index}]`);
                        input.setAttribute('name', newName);
                    }
                });
            });
            itemIndex = items.length;
        }

        function attachCalculationEvents(container) {
            const quantityInput = container.querySelector('.quantity-input');
            const priceInput = container.querySelector('.price-input');
            const discountInput = container.querySelector('.discount-input');
            
            [quantityInput, priceInput, discountInput].forEach(input => {
                if (input) {
                    input.addEventListener('input', calculateItemTotal);
                    input.addEventListener('change', calculateItemTotal);
                }
            });
        }

        function toNumber(val) {
            if (val == null) return 0;
            if (typeof val !== 'string') return Number(val) || 0;
            // Turkish decimal format: 1.234,56 -> remove dots (thousand sep), replace comma with dot
            // Also handle 50,65 -> 50.65
            let normalized = val.toString().trim();
            
            // If there's both dot and comma, assume Turkish format (1.234,56)
            if (normalized.includes('.') && normalized.includes(',')) {
                normalized = normalized.replace(/\./g, '').replace(',', '.');
            }
            // If only comma, treat as decimal separator (50,65 -> 50.65)
            else if (normalized.includes(',') && !normalized.includes('.')) {
                normalized = normalized.replace(',', '.');
            }
            // If only dots, could be thousand separator or decimal - assume decimal if last dot has <=3 digits after
            else if (normalized.includes('.')) {
                const lastDotIndex = normalized.lastIndexOf('.');
                const afterLastDot = normalized.substring(lastDotIndex + 1);
                if (afterLastDot.length <= 2) {
                    // Likely decimal: 50.65
                    // Keep as is
                } else {
                    // Likely thousand separator: 1.234 -> 1234
                    normalized = normalized.replace(/\./g, '');
                }
            }
            
            const n = parseFloat(normalized);
            return isNaN(n) ? 0 : n;
        }

        function formatCurrency(amount) {
            const currency = document.getElementById('currencySelect').value || 'EUR';
            
            switch(currency) {
                case 'USD':
                    return `$${amount.toFixed(2)}`;
                case 'TRY':
                    return `${amount.toFixed(2)} ₺`;
                case 'EUR':
                default:
                    return `${amount.toFixed(2)} €`;
            }
        }

        function calculateItemTotal(event) {
            const item = event.target.closest('.quote-item');
            const quantity = toNumber(item.querySelector('.quantity-input').value);
            const unitPrice = toNumber(item.querySelector('.price-input').value);
            let discount = toNumber(item.querySelector('.discount-input').value);
            
            const subtotal = quantity * unitPrice;
            const discountAmount = subtotal * (discount / 100);
            const total = subtotal - discountAmount;
            
            item.querySelector('.total-display').value = formatCurrency(total);
            
            calculateTotals();
        }

    function calculateTotals() {
            let subTotal = 0;
            document.querySelectorAll('.quote-item').forEach(item => {
        const quantity = toNumber(item.querySelector('.quantity-input').value);
        const unitPrice = toNumber(item.querySelector('.price-input').value);
        const discount = toNumber(item.querySelector('.discount-input').value);
                
                const itemSubtotal = quantity * unitPrice;
                const discountAmount = itemSubtotal * (discount / 100);
                const itemTotal = itemSubtotal - discountAmount;
                
                subTotal += itemTotal;
            });
            
            const vatRate = toNumber(document.querySelector('input[name="Quote.VatRate"]').value);
            const vatAmount = subTotal * (vatRate / 100);
            const totalAmount = subTotal + vatAmount;
            
            document.getElementById('subTotal').textContent = formatCurrency(subTotal);
            document.getElementById('vatAmount').textContent = formatCurrency(vatAmount);
            document.getElementById('totalAmount').textContent = formatCurrency(totalAmount);
        }

        // Initialize calculation events for existing items
    document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.quote-item').forEach(item => {
                attachCalculationEvents(item);
            });
            
            // VAT rate change event
            document.querySelector('input[name="Quote.VatRate"]').addEventListener('input', calculateTotals);
            
            // Para birimi değiştiğinde totalleri güncelle
            document.getElementById('currencySelect').addEventListener('change', function() {
                calculateTotals();
                // Tüm item totallerini de güncelle
                document.querySelectorAll('.quote-item').forEach(item => {
                    const event = { target: item.querySelector('.quantity-input') };
                    calculateItemTotal(event);
                });
            });
            
            // Initial calculation for all items
            document.querySelectorAll('.quote-item').forEach(item => {
                const event = { target: item.querySelector('.quantity-input') };
                calculateItemTotal(event);
            });
            calculateTotals();

            // Otomatik kalem ekleme - sayfa sonuna yaklaşınca
            let autoAddTriggered = false;
            
            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                const windowHeight = window.innerHeight;
                const documentHeight = document.documentElement.scrollHeight;
                
                // Sayfa sonuna %90 yaklaşıldığında ve henüz tetiklenmemişse
                if ((scrollTop + windowHeight) / documentHeight > 0.9 && !autoAddTriggered) {
                    const items = document.querySelectorAll('.quote-item');
                    const lastItem = items[items.length - 1];
                    
                    // Son kalemin dolu olup olmadığını kontrol et
                    if (lastItem) {
                        const itemName = lastItem.querySelector('input[name*="ItemName"]');
                        const description = lastItem.querySelector('input[name*="Description"]');
                        
                        if (itemName && (itemName.value.trim() !== '' || description.value.trim() !== '')) {
                            addQuoteItem();
                            autoAddTriggered = true;
                            
                            // 2 saniye sonra tekrar tetiklenebilir hale getir
                            setTimeout(() => {
                                autoAddTriggered = false;
                            }, 2000);
                        }
                    } else {
                        // Hiç kalem yoksa otomatik ekle
                        addQuoteItem();
                        autoAddTriggered = true;
                        setTimeout(() => {
                            autoAddTriggered = false;
                        }, 2000);
                    }
                }
            });

            // Eğer sayfa yüklendiğinde hiç kalem yoksa otomatik bir tane ekle
            if (document.querySelectorAll('.quote-item').length === 0) {
                addQuoteItem();
            }

            // Number input format koruması
            function setupNumberFormatting() {
                // Mevcut inputları işle
                document.querySelectorAll('.quantity-input, .price-input, .discount-input').forEach(input => {
                    addNumberFormatting(input);
                });
            }

            function formatNumberValue(el) {
                if (el && el.value !== undefined && el.value !== null && el.value !== '' && !isNaN(el.value)) {
                    const num = parseFloat(el.value);
                    if (el.classList.contains('price-input')) {
                        el.value = num.toFixed(2);
                    } else if (el.classList.contains('quantity-input')) {
                        el.value = num.toFixed(1);
                    }
                }
            }

            function addNumberFormatting(input) {
                const formatValue = function() { formatNumberValue(this); };
                // Hem blur hem input event'lerinde format uygula
                input.addEventListener('blur', formatValue);
                input.addEventListener('input', formatValue);
            }

            // İlk kurulum
            setupNumberFormatting();
            // Mevcut sayıları anında formatla (ör. 0.00, 1.0)
            document.querySelectorAll('.quantity-input, .price-input, .discount-input').forEach(el => formatNumberValue(el));

        });
        
        // Item indexlerini güncelle
        function reindexItems() {
            const items = document.querySelectorAll('.quote-item');
            items.forEach((item, index) => {
                const inputs = item.querySelectorAll('input[name*="QuoteItemsList"]');
                inputs.forEach(input => {
                    const name = input.getAttribute('name');
                    if (name && name.includes('QuoteItemsList[')) {
                        const newName = name.replace(/QuoteItemsList\[\d+\]/, `QuoteItemsList[${index}]`);
                        input.setAttribute('name', newName);
                    }
                });
            });
        }
        
        // Boş item'ları temizle
        function removeEmptyItems() {
            const items = document.querySelectorAll('.quote-item');
            let removedCount = 0;
            
            items.forEach(item => {
                const itemName = item.querySelector('input[name*="ItemName"]');
                const quantity = item.querySelector('input[name*="Quantity"]');
                const unitPrice = item.querySelector('input[name*="UnitPrice"]');
                
                // Item adı boşsa veya miktar/birim fiyat sıfır veya negatifse bu item'ı boş kabul et
                const itemNameEmpty = !itemName?.value?.trim();
                const quantityInvalid = !quantity?.value || parseFloat(quantity.value) <= 0;
                const unitPriceInvalid = !unitPrice?.value || parseFloat(unitPrice.value) < 0;
                
                const isEmpty = itemNameEmpty || (quantityInvalid && unitPriceInvalid);
                
                if (isEmpty) {
                    console.log('Removing empty/invalid item:', {
                        itemName: itemName?.value,
                        quantity: quantity?.value,
                        unitPrice: unitPrice?.value,
                        isEmpty,
                        element: item
                    });
                    item.remove();
                    removedCount++;
                } else {
                    // Dolu item'larda required attribute'ları ekle
                    if (itemName) itemName.setAttribute('required', 'required');
                    if (quantity) quantity.setAttribute('required', 'required');
                    if (unitPrice) unitPrice.setAttribute('required', 'required');
                }
            });
            
            if (removedCount > 0) {
                console.log(`Removed ${removedCount} empty items`);
                reindexItems(); // Item'ları yeniden indexle
                calculateTotals(); // Toplamları güncelle
            }
            
            return removedCount;
        }

        // Form submit öncesi validation temizleme
        function cleanupBeforeSubmit() {
            console.log('Cleaning up before submit...');
            
            // Tüm item'lardaki required attribute'ları geçici olarak kaldır
            document.querySelectorAll('.quote-item input[required]').forEach(input => {
                input.removeAttribute('required');
            });
            
            // Boş item'ları sil
            const removedCount = removeEmptyItems();
            
            // Kalan item'ları kontrol et ve gerekli validation'ları ekle
            const remainingItems = document.querySelectorAll('.quote-item');
            
            if (remainingItems.length === 0) {
                alert('En az bir teklif kalemi girmelisiniz!');
                addQuoteItem(); // Yeni bir boş item ekle
                return false;
            }
            
            // Kalan item'larda en az birinin dolu olduğunu kontrol et
            let hasValidItem = false;
            remainingItems.forEach(item => {
                const itemName = item.querySelector('input[name*="ItemName"]');
                const unitPrice = item.querySelector('input[name*="UnitPrice"]');
                
                if (itemName?.value?.trim() && unitPrice?.value && parseFloat(unitPrice.value) > 0) {
                    hasValidItem = true;
                    // Geçerli item'larda required attribute'ları geri ekle
                    itemName.setAttribute('required', 'required');
                    unitPrice.setAttribute('required', 'required');
                }
            });
            
            if (!hasValidItem) {
                alert('En az bir teklif kaleminde ürün adı ve birim fiyat girmelisiniz!');
                return false;
            }
            
            console.log(`Form submitting with ${remainingItems.length} valid items`);
            return true;
        }

        // Form submit event listener
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                if (!cleanupBeforeSubmit()) {
                    e.preventDefault();
                    return false;
                }
                // Normalize numeric inputs before actual submit
                normalizeNumericInputsForSubmit(document);
            });
        }
        
        // NAZİK: SADECE İNDİRİM BUTONLARINI GİZLE, MİKTAR BUTONLARI KALSIN
        function destroyAllStepperButtons() {
            // Sadece indirim ile ilgili stepper butonları gizle
            const allButtons = document.querySelectorAll('button');
            allButtons.forEach(btn => {
                const text = btn.textContent || btn.innerHTML;
                if (text.includes('+') || text.includes('−') || text.includes('-')) {
                    // Sadece indirim ile ilgili butonları gizle
                    if (btn.onclick && btn.onclick.toString().includes('Discount')) {
                        btn.style.display = 'none';
                        btn.style.visibility = 'hidden';
                    }
                }
            });
        }
        
        // Sayfa yüklendiğinde çalıştır
        destroyAllStepperButtons();
        
        // Her yeni item eklendiğinde de çalıştır
        const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.type === 'childList') {
                    setTimeout(() => {
                        destroyAllStepperButtons();
                    }, 100);
                }
            });
        });
        
        // Quote items container'ı gözlemle
        const quoteItemsContainer = document.getElementById('quoteItems');
        if (quoteItemsContainer) {
            observer.observe(quoteItemsContainer, {
                childList: true,
                subtree: true
            });
        }
    </script>
