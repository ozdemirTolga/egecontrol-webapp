@model EgeControlWebApp.Models.Contact

@{
    ViewData["Title"] = "İletişim Kişisi Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">İletişim Kişileri</a></li>
                    <li class="breadcrumb-item active">@Model.FullName</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2>@Model.FullNameWithTitle</h2>
                    <p class="text-muted mb-0">@Model.Company.Name</p>
                </div>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success fs-6">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">Pasif</span>
                    }
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">İletişim Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>Şirket:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <a asp-area="Admin" asp-controller="Companies" asp-action="Details" asp-route-id="@Model.CompanyId">
                                        @Model.Company.Name
                                    </a>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>Ad Soyad:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.FullName
                                </div>
                            </div>
                            <hr>

                            @if (!string.IsNullOrEmpty(Model.Title))
                            {
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong>Ünvan:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        @Model.Title
                                    </div>
                                </div>
                                <hr>
                            }

                            @if (!string.IsNullOrEmpty(Model.Department))
                            {
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong>Departman:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        @Model.Department
                                    </div>
                                </div>
                                <hr>
                            }

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>Email:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>Telefon:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <a href="tel:@Model.Phone">@Model.Phone</a>
                                    @if (!string.IsNullOrEmpty(Model.Extension))
                                    {
                                        <span class="text-muted">(Dahili: @Model.Extension)</span>
                                    }
                                </div>
                            </div>
                            <hr>

                            @if (!string.IsNullOrEmpty(Model.MobilePhone))
                            {
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong>Cep Telefonu:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        <a href="tel:@Model.MobilePhone">@Model.MobilePhone</a>
                                    </div>
                                </div>
                                <hr>
                            }

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>Durum:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- İlişkili Teklifler -->
                    @if (Model.Quotes?.Any() == true)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="mb-0">İlişkili Teklifler (@Model.Quotes.Count())</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Teklif No</th>
                                                <th>Tarih</th>
                                                <th>Tutar</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var quote in Model.Quotes.OrderByDescending(q => q.QuoteDate))
                                            {
                                                <tr>
                                                    <td>@quote.QuoteNumber</td>
                                                    <td>@quote.QuoteDate.ToString("dd.MM.yyyy")</td>
                                                    <td>@quote.TotalAmount.ToString("C2")</td>
                                                    <td>
                                                        <a asp-area="" asp-controller="Quote" asp-action="Details" asp-route-id="@quote.Id" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-eye"></i> Görüntüle
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">İşlemler</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                                <hr>
                                <a href="mailto:@Model.Email" class="btn btn-outline-secondary">
                                    <i class="fas fa-envelope"></i> Email Gönder
                                </a>
                                <a href="tel:@Model.Phone" class="btn btn-outline-secondary">
                                    <i class="fas fa-phone"></i> Ara
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Kayıt Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text small">
                                <strong>Oluşturulma:</strong><br>
                                @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")<br><br>
                                @if (Model.UpdatedDate.HasValue)
                                {
                                    <strong>Son Güncelleme:</strong><br>
                                    @Model.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
