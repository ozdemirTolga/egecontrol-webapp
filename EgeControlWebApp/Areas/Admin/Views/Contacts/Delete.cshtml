@model EgeControlWebApp.Models.Contact

@{
    ViewData["Title"] = "İletişim Kişisi Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">İletişim Kişileri</a></li>
                    <li class="breadcrumb-item active">@Model.FullName - Sil</li>
                </ol>
            </nav>

            <h2 class="text-danger">@ViewData["Title"]</h2>

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat!
                </h4>
                <p>
                    <strong>@Model.FullNameWithTitle</strong> isimli iletişim kişisini silmek üzeresiniz. 
                    Bu işlem geri alınamaz.
                </p>
                <hr>
                <p class="mb-0">
                    Silme işlemi sadece kişiyi "pasif" duruma getirir. Kayıt tamamen silinmez.
                </p>
            </div>

            @if (Model.Quotes?.Any() == true)
            {
                <div class="alert alert-info" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-info-circle"></i> İlişkili Kayıtlar
                    </h5>
                    <p>Bu iletişim kişisinin <strong>@Model.Quotes.Count() teklif</strong> kaydı bulunmaktadır:</p>
                    <ul class="mb-0">
                        @foreach (var quote in Model.Quotes.Take(5).OrderByDescending(q => q.QuoteDate))
                        {
                            <li>@quote.QuoteNumber - @quote.QuoteDate.ToString("dd.MM.yyyy") (@quote.TotalAmount.ToString("C2"))</li>
                        }
                        @if (Model.Quotes.Count() > 5)
                        {
                            <li><em>... ve @(Model.Quotes.Count() - 5) teklif daha</em></li>
                        }
                    </ul>
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Silinecek Kayıt Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Şirket:</dt>
                                <dd class="col-sm-8">@Model.Company.Name</dd>

                                <dt class="col-sm-4">Ad Soyad:</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                @if (!string.IsNullOrEmpty(Model.Title))
                                {
                                    <dt class="col-sm-4">Ünvan:</dt>
                                    <dd class="col-sm-8">@Model.Title</dd>
                                }

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Telefon:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4">Durum:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Kayıt Tarihi:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">Silme İşlemini Onayla</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                Bu işlemi onayladığınızda:
                            </p>
                            <ul>
                                <li>İletişim kişisi "pasif" duruma geçer</li>
                                <li>Yeni teklif oluşturma sırasında görünmez</li>
                                <li>Mevcut teklifler etkilenmez</li>
                                <li>Kayıt tamamen silinmez (veri kaybı olmaz)</li>
                            </ul>

                            <form asp-action="Delete" method="post" class="d-inline">
                                <input asp-for="Id" type="hidden" />
                                <button type="submit" class="btn btn-danger w-100 mb-2" 
                                        onclick="return confirm('Bu iletişim kişisini silmek istediğinizden emin misiniz?')">
                                    <i class="fas fa-trash"></i> Evet, Sil
                                </button>
                            </form>

                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info w-100 mb-2">
                                <i class="fas fa-eye"></i> Detayları Görüntüle
                            </a>

                            <a asp-action="Index" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-left"></i> İptal Et
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
