@page
@model IndexModel
@{
    ViewData["Title"] = "Ege Control - Endüstriyel Otomasyon Çözümleri";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <span class="text-primary">Endüstriyel</span><br>
                        <span class="text-dark">Otomasyon</span><br>
                        <span class="text-secondary">Çözümleri</span>
                    </h1>
                    <p class="hero-subtitle">
                        Modern teknoloji ile endüstrinizi geleceğe taşıyoruz. 
                        PLC programlama, SCADA sistemleri, robotik otomasyon ve daha fazlası...
                    </p>
                    <div class="hero-buttons">
                        <a href="#services" class="btn btn-primary btn-lg me-3">Hizmetlerimiz</a>
                        <a href="#contact" class="btn btn-outline-primary btn-lg">İletişim</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-animation">
                    <!-- Animated Factory Icon -->
                    <div class="factory-animation">
                        <svg width="400" height="300" viewBox="0 0 400 300" class="factory-svg">
                            <!-- Factory Building -->
                            <rect x="50" y="150" width="100" height="100" fill="#2563eb" opacity="0.8" class="animate-fade-in">
                                <animate attributeName="opacity" values="0.5;0.9;0.5" dur="3s" repeatCount="indefinite"/>
                            </rect>
                            <rect x="170" y="120" width="80" height="130" fill="#1d4ed8" opacity="0.8" class="animate-fade-in">
                                <animate attributeName="opacity" values="0.6;1;0.6" dur="2.5s" repeatCount="indefinite"/>
                            </rect>
                            <rect x="270" y="140" width="70" height="110" fill="#3b82f6" opacity="0.8" class="animate-fade-in">
                                <animate attributeName="opacity" values="0.7;0.9;0.7" dur="2s" repeatCount="indefinite"/>
                            </rect>
                            
                            <!-- Smokestacks -->
                            <rect x="80" y="100" width="15" height="50" fill="#6b7280"/>
                            <rect x="190" y="80" width="15" height="40" fill="#6b7280"/>
                            <rect x="290" y="90" width="15" height="50" fill="#6b7280"/>
                            
                            <!-- Animated Smoke -->
                            <circle cx="87" cy="95" r="3" fill="#e5e7eb" opacity="0.7">
                                <animate attributeName="cy" values="95;70;45" dur="2s" repeatCount="indefinite"/>
                                <animate attributeName="opacity" values="0.7;0.3;0" dur="2s" repeatCount="indefinite"/>
                            </circle>
                            <circle cx="197" cy="75" r="3" fill="#e5e7eb" opacity="0.7">
                                <animate attributeName="cy" values="75;50;25" dur="1.8s" repeatCount="indefinite"/>
                                <animate attributeName="opacity" values="0.7;0.3;0" dur="1.8s" repeatCount="indefinite"/>
                            </circle>
                            
                            <!-- Conveyor Belt -->
                            <rect x="30" y="250" width="320" height="10" fill="#374151"/>
                            <circle cx="60" cy="260" r="3" fill="#f59e0b" class="conveyor-item">
                                <animate attributeName="cx" values="60;340;60" dur="4s" repeatCount="indefinite"/>
                            </circle>
                            <circle cx="120" cy="260" r="3" fill="#10b981" class="conveyor-item">
                                <animate attributeName="cx" values="120;340;60" dur="4s" begin="1s" repeatCount="indefinite"/>
                            </circle>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

